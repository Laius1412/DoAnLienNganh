<div class="container mt-5">
  <!-- Tiêu đề và nút quay lại -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary mb-0">
      Chi tiết bài viết
    </h2>
    <a href="/news" class="btn btn-outline-primary px-4 py-2 rounded-3 shadow-sm">
      Quay lại danh sách
    </a>
  </div>

  <div class="card shadow border-0 rounded-4 p-4">
    <!-- Tiêu đề và ngày tạo -->
    <div class="d-flex justify-content-between align-items-center flex-wrap mb-3">
      <h3 class="fw-bold text-dark mb-0"><%= newsItem.titles %></h3>
      <span class="badge bg-light text-dark border rounded-pill px-3 py-2 shadow-sm mt-2 mt-md-0">
        <i class="bi bi-calendar-event me-1"></i>
        <%= new Date(newsItem.createAt._seconds * 1000).toLocaleDateString('vi-VN', {
          day: '2-digit', month: '2-digit', year: 'numeric'
        }) %>
      </span>
    </div>

    <!-- Ảnh bài viết: lấy ảnh đầu tiên trong nội dung nếu có, ngược lại dùng newsItem.Img -->
    <%
      const contentImageMatch = newsItem.contents.match(/<img[^>]+src="([^">]+)"/);
      const mainImage = contentImageMatch ? contentImageMatch[1] : newsItem.Img;
    %>
    <% if (mainImage) { %>
      <div class="text-center mb-4">
        <img src="<%= mainImage %>" alt="Ảnh bài viết"
             class="img-fluid rounded-4 shadow-sm border border-2"
             style="max-height: 400px; object-fit: cover;" />
      </div>
    <% } %>

    <!-- Nội dung bài viết -->
    <div>
      <h5 class="fw-semibold mb-3 text-success">Nội dung bài viết</h5>
      <div class="fs-5 lh-lg content-html">
        <%- newsItem.contents %>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- CSS tối ưu cho phần nội dung -->
<style>
  .content-html img {
    max-width: 100%;
    height: auto;
    margin: 12px 0;
    border-radius: 10px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  }

  .content-html p {
    margin-bottom: 1rem;
  }
</style>
