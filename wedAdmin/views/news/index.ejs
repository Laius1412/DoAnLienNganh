<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary">Danh sách bài viết</h2>
    <a href="/news/create" class="btn btn-success">+ Thêm mới</a>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
      <thead class="table-success">
        <tr>
          <th scope="col">Tiêu đề</th>
          <th scope="col">Ảnh</th>
          <th scope="col">Nội dung</th>
          <th scope="col">Ngày tạo</th>
        </tr>
      </thead>
      <tbody>
        <% news.forEach(item => { %>
          <tr>
            <td><%= item.titles %></td>
            <td><img src="<%= item.Img %>" alt="Ảnh bài viết" style="width: 100px; height: auto; object-fit: cover;" class="img-thumbnail"></td>
            <td style="max-width: 300px;"><%= item.contents %></td>
            <td><%= new Date(item.createAt._seconds * 1000).toLocaleDateString('vi-VN') %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
