<h1>Thêm xe mới</h1>
<form method="POST" action="/vehicles/add">
  <input name="nameVehicle" placeholder="Tên xe" required />
  <input name="plate" placeholder="Biển số" required />
  <select name="vehicleTypeId" required>
    <% vehicleTypes.forEach(type => { %>
      <option value="<%= type.id %>"><%= type.nameType %></option>
    <% }) %>
  </select>
  <select name="tripId" required>
    <% trips.forEach(trip => { %>
      <option value="<%= trip.id %>"><%= trip.nameTrip %></option>
    <% }) %>
  </select>
  <input name="price" type="number" placeholder="Giá" required />
  <input name="startTime" type="time" required />
  <input name="endTime" type="time" required />
  <button type="submit">Thêm</button>
</form>
